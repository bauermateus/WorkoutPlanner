<resources>
    <!-- Base application theme. -->
    <style name="Theme.WorkoutPlanner" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/blue</item>
        <item name="colorPrimaryVariant">@color/dark_blue</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/very_dark_grey</item>
        <item name="colorSecondaryVariant">@color/black</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="primary_background">
        <item name="android:background">@color/blue</item>
    </style>

    <style name="secondary_background">
        <item name="android:background">@color/very_dark_grey</item>
    </style>

    <style name="secondary_text_color">
        <item name="android:textColor">@color/white</item>
    </style>

</resources>