<resources>
    <!-- Base application theme. -->
    <style name="Theme.WorkoutPlanner" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/blue</item>
        <item name="colorPrimaryVariant">@color/dark_blue</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/very_dark_grey</item>
        <item name="colorSecondaryVariant">@color/black</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorSecondary</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="primary_background">
        <item name="android:background">@color/blue</item>
    </style>

    <style name="secondary_background">
        <item name="android:background">@color/very_dark_grey</item>
    </style>

    <style name="icon_profile_color">
        <item name="android:backgroundTint">@color/light_grey</item>
    </style>

    <style name="secondary_text_color">
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="profile_background_tint_linear_layout">
        <item name="android:backgroundTint">@color/very_dark_grey</item>
    </style>
    <style name="white_black_daynight">
        <item name="background">@color/black</item>
    </style>
    <style name="grey_black_style">
        <item name="android:backgroundTint">@color/black</item>
    </style>
    <style name="background_viewline">
        <item name="android:background">@color/white</item>
    </style>

</resources>